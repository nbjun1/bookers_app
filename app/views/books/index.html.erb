
<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>
<% if @book.errors.any? %>
<% byebug %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>

  </ul>
<% end %>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @books.each do |book| %>

  <tbody>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(id: book.id) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
   </tr>
  </tbody>
 </table>

<% end %>

<h2>New book</h2>



<%= form_with model: @book, url: '/books', method: :post do |f| %>

 <p>タイトル</p>
 <%= f.text_field :title %>

 <p>本文</p>
 <%= f.text_area :body %>

<p><%= f.submit 'Create Book' %></p>
<% end %>

